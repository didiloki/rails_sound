<div class="container mt-5">
    <div class="row">
        <div class="col-2">
        <%= image_tag @album.cover, :style => "width:150px; height:150px"  %>
        </div>
         <div class="col-9">
            Album Name : <h3><%= @album.name %> </h3>
            Album Artist : 
            <h4><%= link_to @album.artist.name, artist_path(@album.artist.id) %> </h4>
        </div>
    </div>

</br>
<table class="table">
<% if  @album.songs.size < 1 %>
  <div class="alert alert-warning">
    No Songs listed
  </div>

<% else %>
<% @album.songs.each do |song| %>
    <tr>
        <td><%= song.name %></td>
        <td>
            <audio controls
                src="<%= song.url %>">
                    Your browser does not support the
                    <code>audio</code> element.
            </audio>
        </td>
    </tr>
 
 
<% end %>
<% end %>
</table>
</div>
